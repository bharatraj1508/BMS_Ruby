<div class="max-w-md mx-auto bg-white p-8 mt-20 border border-gray-300 shadow-lg rounded-lg">
    <h2 class="text-2xl font-bold text-center mb-6">Setup your profile</h2>
    
    <%= form_with(model: @user, url: accept_invitation_path, method: :get, class: "space-y-4") do |form| %>
        <div class="grid gap-y-4">
            <div class= "flex flex-row space-x-4">
                <div>
                    <%#= form.label :first_name, class:"block text-sm mb-2 dark:text-white" %>
                    <%= form.text_field :first_name, autofocus: true, required: true, placeholder: "First name", class:"py-3 px-4 block w-full border border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600" %>
                </div>

                <div>
                    <%#= form.label :last_name, class:"block text-sm mb-2 dark:text-white" %>
                    <%= form.text_field :last_name, autofocus: true, required: true, placeholder: "Last name", class:"py-3 px-4 block w-full border border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-6000"  %>
                </div>
            </div>

            <div class= "flex flex-row space-x-4">
                <div class="relative">
                    <%= form.text_field :company_name, value: @account_invitation.account.name, disabled: true, class: "py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600" %>
                </div>
                <!-- Form Group -->
                <div>
                    <%#= form.label :email, class:"block text-sm mb-2 dark:text-white" %>
                    <div class="relative">
                        <%= form.text_field :email, value: @account_invitation.email, disabled: true, class: "py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600" %>
                    </div>
                </div>
            </div>
            <!-- End Form Group -->

            <!-- Form Group -->
            <div>
                <div class="flex justify-between items-center">
                    <%#= form.label :password, class:"block text-sm mb-2 dark:text-white" %>
                </div>
                <div class="relative">
                    <%= form.password_field :password, required: true, autocomplete: "new-password", placeholder: "Password", class:"py-3 px-4 block w-full border border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-7000 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600" %>
                    <div class="hidden absolute inset-y-0 end-0 pointer-events-none pe-3">
                        <svg class="size-5 text-red-500" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
                        </svg>
                    </div>
                </div>
                <p class="hidden text-xs text-red-600 mt-2" id="password-error">8+ characters required</p>
            </div>
            <!-- End Form Group -->

            <!-- Form Group -->
            <div>
                <div class="flex justify-between items-center">
                    <%#= form.label :password_confirmation, class:"block text-sm mb-2 dark:text-white" %>
                </div>
                <div class="relative">
                    <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", placeholder: "Confirm Password", class:"py-3 px-4 block w-full border border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-7000 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600" %>
                    <div class="hidden absolute inset-y-0 end-0 pointer-events-none pe-3">
                        <svg class="size-5 text-red-500" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
                        </svg>
                    </div>
                </div>
                <p class="hidden text-xs text-red-600 mt-2" id="password-error">8+ characters required</p>
            </div>
            <!-- End Form Group -->

            <%= form.submit "Register", class:"w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none" %>
        </div>
    <% end %>
</div>